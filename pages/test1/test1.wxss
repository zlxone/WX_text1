/* pages/test1/test1.wxss */

.container_test {
  font-size: 0;
  flex-direction: column;
  justify-content: flex-start;
  height: 100%;
}

.test_title {
  height: 120rpx;
  width: 100%;
  line-height: 120rpx;
  display: block;
  text-align: center;
  font-size: 50rpx;
  background: gold;
}

.test_search {
  display: flex;
  align-items: center;
  height: 88rpx;
  border-bottom: 1rpx solid #dfdfdf;
}

.search_input_box {
  box-sizing: border-box;
  flex: 1;
  display: flex;
  align-items: center;
  padding-left: 20rpx;
  margin-left: 30rpx;
  border-radius: 29rpx;
  background-color: #f2f2f2;
}

.search_input {
  flex: 1;
  height: 58rpx;
  margin-left: 10rpx;
  font-size: 28rpx;
}
.search_input2 {
  flex: 1;
  height: 58rpx;
  line-height: 58rpx;
  color: #999;
  margin-left: 10rpx;
  font-size: 28rpx;
}
.search_button {
  font-size: 28rpx;
  color: #ff3571;
  background-color:transparent;
  border: none;
  width: 100rpx;
  display: inline-block;
  text-align: center;
}

.test_scrollview {
  /* overflow: scroll;
  text-align: center; *//* width: 300%; */
  border-bottom: 4px solid #dcdcdc;
}

.test_view {
  display: flex;
  padding: 50rpx;
}

.test_img {
  width: 90rpx;
  height: 90rpx;
  margin-bottom: 10rpx;
}

.test_name {
  font-size: 30rpx;
}

.test_pack {
  width: 90rpx;
  display: inline-block;
  text-align: center;
  margin-right: 100rpx;
}

.test_pack:last-child {
  margin-right: 0;
}

.swiper-img_pack {
  overflow: hidden;
  width: 100%;
  height: 380rpx;
}

.swiper-img {
  /* max-height: 100%; */
  max-width: 100%;
}

.image_pack {
  width: 100%;
  height: 380rpx;
  overflow: hidden;
  background: lightgoldenrodyellow;
}

.image {
  max-width: 100%;
  /* max-height: 100% */
}
