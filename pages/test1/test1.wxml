  <swiper indicator-dots='true' indicator-color='lightgray' indicator-active-color='white' autoplay='true' interval='3000' duration='1000' circular='true'>
    <swiper-item class='swiper-img_pack'>
      <image class='swiper-img' src='../../images/box.png'></image>
